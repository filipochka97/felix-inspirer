@keyframes fadeIn {
  0% {
    transform: translateY(-0.2em);
    opacity: 0;
  }

  100% {
    transform: translateY(0);
    opacity: 1;
  }
}

.hint {
  font-size: 12px;
  color: #333;
  margin-bottom: 15px;
  font-style: italic;

  &--error {
    color: #f44336;
    animation: fadeIn 0.1s ease;
  }
}
