.select__label {
  color: #828282;
  font-size: 12px;
  font-weight: 400;
  display: inline-block;
  margin-bottom: 5px;

  &--required::after {
    content: ' *';
    color: #f44336;
  }
}

.select__input {
  appearance: none;
  margin-bottom: 5px;
  padding: 10px 15px;
  width: 100%;
  border-radius: 5px;
  background: #eee;
  border: 0;
  font-family: inherit;
  font-weight: 400;
  font-size: 16px;
  color: #222;
  outline: none;
  position: relative;
  background-image: url(data:image/svg+xml;base64,);
  background-repeat: no-repeat;
  background-position: right 15px center;
  transition: box-shadow 0.2s ease;

  &:hover,
  &:focus {
    box-shadow: 0 0 0 1px #e0e0e0;
  }
}
