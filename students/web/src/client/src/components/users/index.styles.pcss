.list {
  width: 960px;
  margin: 0 auto;
  padding: 50px 0;
  flex-grow: 1;
}

.list-header {
  padding: 15px 30px;
  display: flex;
  align-items: center;

  &__title {
    font-size: 14px;
    font-weight: 400;
    color: #aaa;

    &:first-child {
      width: 350px;
    }
  }

  &__button {
    margin-left: auto;
  }
}

.list-body__item + .list-body__item {
  margin-top: 5px;
}

.list-body__item {
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.1);
}

.list-body__content {
  padding: 25px 30px;
  background: #fff;
  margin-top: 1px;
}

.note {
  display: flex;
  align-items: center;
  flex-direction: column;
  animation: appear 1s ease-in-out 0s;
}

.note__text {
  margin: 2em 0;
  color: #999;
  font-size: 28px;
  font-weight: 300;
  position: relative;

  &::after {
    content: '';
    position: absolute;
    display: block;
    right: -24px;
    bottom: -84px;
    width: 75px;
    height: 65px;
    background-size: contain;
    background-repeat: no-repeat;
    background-image: url(data:image/svg+xml;base64,);
  }
}

.example-enter {
  opacity: 0.01;
}

.example-enter.example-enter-active {
  opacity: 1;
  transition: opacity 2s ease-in;
}

.example-leave {
  opacity: 1;
}

.example-leave.example-leave-active {
  opacity: 0.01;
  transition: opacity 2s ease-in;
}

@keyframes appear {
  0% {
    opacity: 0;
  }

  50% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}
